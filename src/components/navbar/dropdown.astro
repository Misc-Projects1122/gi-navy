---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="relative">
  <DropdownContainer class="group">
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:pr-3 text-black hover:text-primary">
      <span
        class="text-sm text-center flex align-middle items-center md:my-1 my-0 md:mt-1 mt-2"
        >{title}</span
      >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "md:absolute w-full md:w-48 z-10",
          lastItem
            ? "md:right-0 origin-top-right"
            : "md:left-0 origin-top-left",
        ]}>
        <div class="md:bg-white md:shadow md:border flex flex-col py-4">
          {
            children.map((item) => (
              <a
                href={item.path}
                class=" text-black hover:text-white hover:bg-primary text-sm px-[16px] py-[8px]">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>
