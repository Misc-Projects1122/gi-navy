---
// NavyCard.astro
const { image, title, description, link } = Astro.props;
---

<div
  class="flex justify-center relative group w-full mb-2 md:mb-0 md:h-[500px] overflow-hidden">
  <img
    src={image}
    alt={title}
    class="w-11/12 md:w-full md:h-full md:object-fill transition-transform duration-300 group-hover:scale-105"
  />
  <div
    class="hidden md:flex absolute inset-0 bg-black bg-opacity-50 items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
  </div>
  <div
    class="hidden md:flex absolute inset-0 bg-[#01BDB7] bg-opacity-80 items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <div class="text-white p-6 text-center">
      <h3 class="text-xl font-bold mb-2">{title}</h3>
      {description && <p class="mb-4">{description}</p>}
      <a href={link} class="text-white border border-white py-2 px-4"
        >Learn More</a
      >
    </div>
  </div>
  <p
    class="absolute bottom-4 left-12 md:left4 text-white text-md md:text-lg transition-all duration-300 group-hover:opacity-0">
    {title}
  </p>
</div>
