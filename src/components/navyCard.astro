---
// NavyCard.astro
const { image, title, description, link } = Astro.props;
---

<div class="relative group w-full h-80 lg:h-96 overflow-hidden">
  <img src={image} alt={title} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105">
  <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <a href={link} class="text-white border border-white py-2 px-4">Learn More</a>
  </div>
  <div class="absolute inset-0 bg-[#01BDB7] bg-opacity-80 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <div class="text-white p-6">
      <h3 class="text-xl font-bold mb-2">{title}</h3>
      {description && <p class="mb-4">{description}</p>}
      <a href={link} class="text-white border border-white py-2 px-4">Learn More</a>
    </div>
  </div>
  <p class="absolute bottom-4 left-4 text-white text-lg transition-all duration-300 group-hover:opacity-0">{title}</p>
</div>
