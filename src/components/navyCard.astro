---
// NavyCard.astro
const { image, title, description, link } = Astro.props;
---

<div
  class="flex justify-center relative group w-full mb-2 lg:mb-0 md:h-[500px] overflow-hidden">
  <img
    src={image}
    alt={title}
    class="w-9/12 lg:w-full lg:object-fill transition-transform duration-300 group-hover:scale-105"
  />
  <div
    class="hidden md:flex absolute inset-0 bg-black bg-opacity-50 items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
  </div>
  <div
    class="hidden md:flex absolute inset-0 bg-primary bg-opacity-80 items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 w-10/12 lg:w-full left-16 lg:left-0">
    <div class="flex flex-col items-center text-white p-6">
      <div class="text-2xl font-semibold mb-7 font-condensed w-2/3">
        {title}
      </div>
      {description && <p class="mb-4 ">{description}</p>}
      <a
        href={link}
        class="text-white border-[3px] font-condensed font-semibold text-base border-white py-2 px-8 mt-10"
        >Learn More</a
      >
    </div>
  </div>
  <div
    class="absolute bottom-4 left-12 xxs:left-16 md:left-32 lg:left-4 text-sm md:text-2xl lg:text-lg xl:text-2xl font-condensed font-semibold text-white transition-all duration-300 group-hover:opacity-0">
    {title}
  </div>
</div>
