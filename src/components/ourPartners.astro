---
// PartnersSection.astro
const partners = [
  { src: "/alliance/alliance1.png", alt: "Partner 1" },
  { src: "/alliance/alliance3.png", alt: "Partner 3" },
  { src: "/alliance/alliance4.png", alt: "Partner 4" },
  { src: "/alliance/alliance5.png", alt: "Partner 5" },
  { src: "/alliance/alliance6.png", alt: "Partner 6" },
];
---

<section class="bg-backgroundSec lg:bg-white py-6 md:py-[74px]">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-xl md:text-4xl font-medium mb-2 md:mb-6 font-condensed">
      OUR PARTNERS
    </h2>
    <p class="text-md md:text-[22px] text-gray-600 mb-6 md:mb-9">
      Joining hands with the top leaders in the industry
    </p>
    <div
      class="flex flex-wrap justify-center items-center gap-8 xs:gap-10 md:gap-[60px]">
      {
        partners.map((partner) => (
          <div class="flex justify-center items-center">
            <img
              src={partner.src}
              alt={partner.alt}
              class="h-7 xxs:h-10 md:h-20"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
